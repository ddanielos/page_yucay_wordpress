.blog-item-container
   padding 60px 0 60px 0

.blog-item-wraper
    border-radius 14px
    overflow hidden
    //box-shadow 0px 0px 15px rgba(198, 106, 72, 0.5)
    box-shadow 0px 0px 25px rgba(198, 106, 72, 0.5)
    display flex
    flex-direction column
    width 400px
    height 450px
    margin-right 10px
    cursor pointer
    transition all 250ms ease

.blog-item-wraper:hover
    box-shadow: rgb(198, 106, 72) 0px 10px 15px -5px;
    transform translateY(-2%)

.blog-item-image
    width 400px
    height 250px

.blog-item-card
    height 200px
    display flex
    background color_principal
    flex-direction column
    justify-content space-evenly
    transition 450ms opacity
    padding 20px
    text-align justify
    line-height 1.4rem

.blog-item-title
    font-family Fuente1
    text-transform uppercase
    font-size 1.1rem

.blog-item-description
    font-family Fuente1
    font-size 1rem
