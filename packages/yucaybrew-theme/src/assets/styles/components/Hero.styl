.hero
   width 100%
   max-width 1920px
   &__background-device
      visibility hidden
      height 0px
      width 100vw
      display flex
      flex-direction: column
      align-items center
      justify-content: space-around
   &__background
      max-width 1920px
      max-height: 826px
      width 100%
      visibility visible
      height 43vw
      display flex
      align-items center
      background-position center top
      flex-direction column
      justify-content space-evenly
   &__title
      margin-left auto
      margin-right auto
      padding-top 130px
   &__slogan
      color color_principal
      font-size size_menu_1920
      text-transform uppercase
      font-family Fuente1
      font-weight bold
      letter-spacing -1.26px
      border-bottom 2px solid color_principal
      word-spacing: 0.4em
   @media (max-width: 1590px)
      &__slogan
         font-size size_menu_1360
   @media (max-width: 1023px)
      padding-top 0px
      width: 100%
      height 650px
      &__background
         display none
      &__background-device
         height 650px
         visibility visible
         background-position center top
         background-size percentage(4)
         position: absolute
      .dark
         width 100%
         height 650px
         background-color: rgba(0,0,0,0.5)
         position absolute
      &__logo
         filter hue-rotate(435deg) brightness(1390%)
         z-index 6
         width 162px
         margin-left auto
         margin-right auto
      &__title
         visibility hidden
      .Todas
         z-index 7
         padding 15px
         border 4px solid color_principal 
         font-family Fuente1
         font-size 20px
         font-weight 700
         color color_principal
         text-transform uppercase